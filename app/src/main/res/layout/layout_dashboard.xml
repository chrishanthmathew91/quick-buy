<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/item1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/blog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:text="Name of Item to Display"
            android:textColor="#000"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/item1"
            android:layout_width="@dimen/ImageWidth"
            android:layout_height="@dimen/ImageHeight"
            android:layout_marginStart="@dimen/ImageMargin"
            android:layout_marginTop="@dimen/ImageMargin"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/item2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blog_title"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/item2"
            android:layout_width="@dimen/ImageWidth"
            android:layout_height="@dimen/ImageHeight"
            android:layout_marginTop="@dimen/ImageMargin"
            android:layout_marginEnd="@dimen/ImageMargin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item1"
            app:layout_constraintTop_toBottomOf="@+id/blog_title"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/item3"
            android:layout_width="@dimen/ImageWidth"
            android:layout_height="@dimen/ImageHeight"
            android:layout_marginStart="@dimen/ImageMargin"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item1"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/item4"
            android:layout_width="@dimen/ImageWidth"
            android:layout_height="@dimen/ImageHeight"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/ImageMargin"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item3"
            app:layout_constraintTop_toBottomOf="@+id/item2"
            tools:srcCompat="@tools:sample/avatars" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>